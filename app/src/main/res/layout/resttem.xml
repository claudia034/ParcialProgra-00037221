<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/canal_item_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_gap"
            app:cardBackgroundColor="@color/cardLayout"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewNoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/gap"
                    android:src="@drawable/rest" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/normal_gap"
                    android:paddingVertical="@dimen/gap">

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_name_testing"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_canal_title" />

                    <TextView
                        android:id="@+id/contenido_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardLayout"
                        android:text="@string/text_content_testing"
                        android:textColor="@color/calification"
                        android:textSize="@dimen/text_canal_title"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>